<%- include('./partials/header'); %>

<body class="bg-gray-100 font-sans">
  <div class="max-w-screen-lg mx-auto p-4">

    <!-- Order Now Section -->
    <div class="bg-white p-4 rounded-lg shadow mb-6">
      <div class="flex justify-between items-center">
        <h2 class="text-lg font-semibold">Order Now</h2>
        <a href="/products" class="text-blue-500 text-sm hover:underline">See all</a>
      </div>
      <div class="flex space-x-4 mt-4 overflow-x-auto pb-2 scrollbar-hide">
        <% rnproducts.forEach(function(elem){ %>
          <div class="flex w-36 flex-shrink-0 flex-col items-center bg-gray-50 rounded-lg p-3 hover:shadow-md transition">
            <div class="relative">
              <% if (elem.image && elem.image.data && elem.image.contentType) { %>
                <img class="w-28 h-28 object-cover rounded mb-3"
                  src="data:<%= elem.image.contentType %>;base64,<%= elem.image.data.toString('base64') %>"
                  alt="Product Image">
              <% } else { %>
                <img class="w-28 h-28 object-cover rounded mb-3"
                  src="/default.png" 
                  alt="Default Image">
              <% } %>
            </div>
            <p class="text-sm text-center font-medium"><%= elem.name %></p>
            <p class="text-xs text-gray-500 line-through">₹<%= Number(elem.price)+20 %></p>
            <p class="font-bold text-green-700">₹<%= elem.price %></p>
            <button class="bg-green-700 text-white px-4 py-1 rounded mt-2 text-sm hover:bg-green-800 transition">
              ADD
            </button>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Offers Section -->
    <div class="swiper-container my-8 w-full overflow-hidden rounded-xl shadow-lg">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <a href="https://sheryians.com">
            <img class="w-full h-48 object-cover rounded-xl"
              src="https://cdn.grofers.com/cdn-cgi/image/f=auto,q=70,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg" alt="">
          </a>
        </div>
        <div class="swiper-slide">
          <img class="w-full h-48 object-cover rounded-xl"
            src="https://cdn.grofers.com/cdn-cgi/image/f=auto,q=70,w=720/layout-engine/2023-07/pharmacy-WEB.jpg" alt="">
        </div>
        <div class="swiper-slide">
          <img class="w-full h-48 object-cover rounded-xl"
            src="https://cdn.grofers.com/cdn-cgi/image/f=auto,q=70,w=720/layout-engine/2023-07/Pet-Care_WEB.jpg" alt="">
        </div>
      </div>
    </div>

    <!-- Grocery & Kitchen Section -->
    <% for(let key in products){ %>
      <div class="bg-white p-4 rounded-lg shadow mb-10">
        <h2 class="text-lg font-semibold mb-2"><%= key %></h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 mt-4">
          <% products[key].forEach(elem=>{ %>
            <div class="flex flex-col items-center bg-gray-50 rounded-lg p-3 hover:shadow-md transition">
              <% if (elem.image && elem.image.data && elem.image.contentType) { %>
                <img class="w-full h-32 object-cover rounded mb-3"
                  src="data:<%= elem.image.contentType %>;base64,<%= elem.image.data.toString('base64') %>"
                  alt="Product Image">
              <% } else { %>
                <img class="w-full h-32 object-cover rounded mb-3"
                  src="/default.png"
                  alt="Default Image">
              <% } %>
              <p class="text-sm text-center font-medium"><%= elem.name %></p>
              <a class="px-4 py-1 bg-green-700 text-white text-xs rounded mt-2 hover:bg-green-800 transition"
                href="/cart/add/<%= elem._id %>">
                ADD
              </a>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <% if(SomethingInCart){ %>
      <div class="py-24"></div>
      <!-- Cart Footer -->
      <div class="bg-white p-4 rounded-t-xl shadow fixed bottom-0 inset-x-0">
        <div class="flex justify-between items-center mb-2">
          <div>
            <p class="text-sm font-medium">Get FREE delivery</p>
            <p class="text-xs text-gray-500">Add products worth ₹236 more</p>
          </div>
          <button class="text-blue-500 text-sm hover:underline">See all coupons</button>
        </div>
        <div class="flex justify-between items-center mt-2">
          <div class="text-sm"><%= cartCount %> Item(s)</div>
          <a href="/cart"
            class="flex items-center justify-center px-10 py-3 bg-green-700 text-white rounded-lg font-medium hover:bg-green-800 transition">
            Next <i class="ri-arrow-right-s-fill text-2xl ml-1"></i>
          </a>
        </div>
      </div>
    <% } %>
  </div>

  <!-- Swiper JS -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    var swiper = new Swiper('.swiper-container', {
      effect: 'coverflow',
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: 'auto',
      coverflowEffect: {
        rotate: 10,
        stretch: 0,
        depth: 10,
        modifier: 1,
        slideShadows: true,
      },
      loop: true,
      autoplay: {
        delay: 3000,
        disableOnInteraction: false,
      },
    });

    // Save and restore scroll position
    window.addEventListener('scroll', () => {
      localStorage.setItem('scrollPosition', window.scrollY);
    });
    window.addEventListener('load', () => {
      const scrollPosition = localStorage.getItem('scrollPosition');
      if (scrollPosition) {
        window.scrollTo(0, scrollPosition);
      }
    });
  </script>
</body>

<%- include('./partials/footer'); %>
